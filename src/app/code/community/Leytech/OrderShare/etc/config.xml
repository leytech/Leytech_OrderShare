<config>
    <modules>
        <Leytech_OrderShare>
            <version>1.0.0</version>
        </Leytech_OrderShare>
    </modules>
    <global>
        <blocks>
            <leytech_ordershare>
                <class>Leytech_OrderShare_Block</class>
            </leytech_ordershare>
        </blocks>
        <helpers>
            <leytech_ordershare>
                <class>Leytech_OrderShare_Helper</class>
            </leytech_ordershare>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <leytech_ordershare>
                    <file>leytech/ordershare.xml</file>
                </leytech_ordershare>
            </updates>
        </layout>
        <translate>
            <modules>
                <Leytech_OrderShare>
                    <files>
                        <default>Leytech_OrderShare.csv</default>
                    </files>
                </Leytech_OrderShare>
            </modules>
        </translate>
    </frontend>
    <default>
        <leytech_ordershare>
            <settings>
                <enabled>0</enabled>
                <column_count>4</column_count>
                <twitter_username></twitter_username>
            </settings>
        </leytech_ordershare>
    </default>
</config>
